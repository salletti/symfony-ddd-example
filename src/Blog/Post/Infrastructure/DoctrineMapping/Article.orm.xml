<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Blog\Post\Domain\Entity\Article" table="article" repository-class="App\Blog\Post\Infrastructure\Repository\ArticleRepository">
        <id name="id" type="guid" column="id" length="36" />

        <field name="title" column="title" length="255" />
        <field name="body" type="text" column="body" length="255" />
        <field name="createdAt" type="datetime_immutable" column="created_at"  />
        <field name="updatedAt" type="datetime_immutable" column="updated_at" />

        <field name="author" column="guid" length="36" />
    </entity>

</doctrine-mapping>
