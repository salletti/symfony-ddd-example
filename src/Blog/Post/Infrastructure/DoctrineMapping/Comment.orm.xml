<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Blog\Post\Domain\Entity\Comment" table="comment" repository-class="App\Blog\Post\Infrastructure\Repository\CommentRepository">
        <id name="id" type="guid" column="id" length="36" />

        <field name="message" type="text" column="message" length="255" />
        <field name="createdAt" type="datetime_immutable" column="created_at"  />
        <field name="updatedAt" type="datetime_immutable" column="updated_at" />
        <field name="articleId" column="article_id" />

        <embedded name="email" class="App\Blog\Post\Domain\Entity\Email" use-column-prefix="false" />
    </entity>

</doctrine-mapping>
